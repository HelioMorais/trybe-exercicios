{
    // Define ambientes globais
    "env": {
      "browser": true,
      "es2021": true
    },
    // Estende as características recomendadas
    "extends": "eslint:recommended",
    "overrides": [
    ],
    // Especifica as opções de linguagens JavaScript
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    // Regras do Lint
    "rules": {
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }